extends ../layout

block content
  .container
    .row
      each cat in categories
        .panel.panel-default
          .panel-heading
            h3
              a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0
              each item in cat.movies
                .col-md-2
                  .thumbnail
                    a(href="/movie/#{item._id}",target="_blank")
                      if item.poster.indexOf('http') > -1
                        img(src="#{item.poster}",alt="#{item.title}",title="#{item.title}")
                      else
                        img(src="/upload/#{item.poster}",alt="#{item.title}",title="#{item.title}")
                    .caption
                      h3 #{item.title}
                      p: a.btn.btn-primary(href="/movie/#{item._id}",role="button",target="_blank")
                           span.glyphicon.glyphicon-zoom-in 观看预告片
    .row
      br

